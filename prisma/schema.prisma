generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enum untuk status berita
enum NewsStatus {
  draft
  published
  archived
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  newsCategories   NewsCategory[]
  news             News[]
  announcements    Announcement[]
  socialMediaPosts SocialMediaPost[]
  faqs             Faq[]
  services         Service[]

  newsCategoriesUpdated   NewsCategory[]    @relation("NewsCategoryUpdatedBy")
  newsUpdated             News[]            @relation("NewsUpdatedBy")
  announcementsUpdated    Announcement[]    @relation("AnnouncementUpdatedBy")
  socialMediaPostsUpdated SocialMediaPost[] @relation("SocialMediaPostUpdatedBy")
  faqsUpdated             Faq[]             @relation("FaqUpdatedBy")
  servicesUpdated         Service[]         @relation("ServiceUpdatedBy")
  regulationsUpdated      Regulation[]      @relation("RegulationUpdatedBy")
  regulations             Regulation[]
  contacts                Contact[]
}

model HeroSection {
  id         Int     @id @default(autoincrement())
  heading    String
  subHeading String
  pathVideo  String? @db.Text
  banner     String  @db.Text

  updatedAt DateTime @updatedAt
}

model StatisticCategory {
  id   Int     @id @default(autoincrement())
  name String
  link String? @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  statistics Statistic[]
}

model Statistic {
  id     Int     @id @default(autoincrement())
  name   String
  number Int
  link   String? @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  categoryId Int
  category   StatisticCategory @relation(fields: [categoryId], references: [id])
}

model History {
  id          Int    @id @default(autoincrement())
  year        Int
  description String
  detail      String @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RolesResponsibilities {
  id               Int    @id @default(autoincrement())
  roles            String @db.Text
  responsibilities String @db.Text

  updatedAt DateTime @updatedAt
}

model Structure {
  id    Int    @id @default(autoincrement())
  image String @db.Text

  updatedAt DateTime @updatedAt
}

model DirectorProfile {
  id        Int    @id @default(autoincrement())
  order     Int
  beginYear Int
  endYear   Int?
  name      String
  detail    String @db.Text
  picture   String @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NewsCategory {
  id        Int      @id @default(autoincrement())
  title     String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdById Int
  createdBy   User @relation(fields: [createdById], references: [id])

  updatedById Int?
  updatedBy   User? @relation("NewsCategoryUpdatedBy", fields: [updatedById], references: [id])

  news News[]
}

model News {
  id          Int        @id @default(autoincrement())
  title       String
  slug        String     @unique
  excerpt     String
  description String     @db.Text
  image       String?    @db.Text
  status      NewsStatus @default(draft)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  categoryId Int
  category   NewsCategory @relation(fields: [categoryId], references: [id])

  createdById Int
  createdBy   User @relation(fields: [createdById], references: [id])

  updatedById Int?
  updatedBy   User? @relation("NewsUpdatedBy", fields: [updatedById], references: [id])

  // Many-to-Many
  tags NewsTag[]
}

model Tag {
  id   Int    @id @default(autoincrement())
  name String @unique
  slug String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  news NewsTag[]
}

model NewsTag {
  newsId Int
  tagId  Int
  news   News @relation(fields: [newsId], references: [id])
  tag    Tag  @relation(fields: [tagId], references: [id])

  @@id([newsId, tagId]) // Composite primary key
}

model Announcement {
  id          Int      @id @default(autoincrement())
  title       String
  description String   @db.Text
  attachment  String?  @db.Text // URL atau path ke file
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  createdById Int
  createdBy   User @relation(fields: [createdById], references: [id])

  updatedById Int?
  updatedBy   User? @relation("AnnouncementUpdatedBy", fields: [updatedById], references: [id])
}

model Regulation {
  id          Int      @id @default(autoincrement())
  title       String
  description String   @db.Text
  attachment  String?  @db.Text // URL atau path ke file
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  createdById Int
  createdBy   User @relation(fields: [createdById], references: [id])

  updatedById Int?
  updatedBy   User? @relation("RegulationUpdatedBy", fields: [updatedById], references: [id])
}

model Service {
  id          Int     @id @default(autoincrement())
  title       String
  description String  @db.Text
  icon        String  @db.Text
  link        String? @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdById Int
  createdBy   User @relation(fields: [createdById], references: [id])

  updatedById Int?
  updatedBy   User? @relation("ServiceUpdatedBy", fields: [updatedById], references: [id])
}

model Gallery {
  id          Int      @id @default(autoincrement())
  title       String
  description String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  images GalleryImage[]
}

model GalleryImage {
  id        Int    @id @default(autoincrement())
  galleryId Int
  image     String @db.Text

  gallery Gallery @relation(fields: [galleryId], references: [id])
}

model Faq {
  id       Int    @id @default(autoincrement())
  question String
  answer   String @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdById Int
  createdBy   User  @relation(fields: [createdById], references: [id])
  updatedById Int?
  updatedBy   User? @relation("FaqUpdatedBy", fields: [updatedById], references: [id])
}

enum SocialMediaType {
  FACEBOOK
  INSTAGRAM
  LINKEDIN
  TIKTOK
  YOUTUBE
}

model SocialMedia {
  id   Int             @id @default(autoincrement())
  name SocialMediaType @unique
  link String          @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SocialMediaPost {
  id       Int             @id @default(autoincrement())
  platform SocialMediaType
  postLink String          @db.Text

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdById Int
  createdBy   User     @relation(fields: [createdById], references: [id])
  updatedById Int?
  updatedBy   User?    @relation("SocialMediaPostUpdatedBy", fields: [updatedById], references: [id])
}

model Contact {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String @db.Text

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  updatedById Int?
  updatedBy   User?    @relation(fields: [updatedById], references: [id])
}
