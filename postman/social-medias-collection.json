{
    "info": {
        "name": "Social Medias API",
        "description": "Collection for testing Social Medias CRUD operations in STANKOM API (uses enum names)",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000/api/v1",
            "type": "string"
        },
        {
            "key": "token",
            "value": "YOUR_JWT_TOKEN",
            "type": "string"
        },
        {
            "key": "socialMediaId",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Create Social Media (INSTAGRAM)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Cookie",
                        "value": "access_token={{token}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"name\": \"INSTAGRAM\",\n  \"link\": \"https://instagram.com/stankom\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/social-medias",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "social-medias"
                    ]
                },
                "description": "Create a new social media entry using enum name INSTAGRAM"
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test('Status is 201', function () {",
                            "  pm.response.to.have.status(201);",
                            "});",
                            "const json = pm.response.json();",
                            "pm.test('Response has data.id', function () {",
                            "  pm.expect(json.data).to.have.property('id');",
                            "});",
                            "// store id for subsequent requests",
                            "if (json && json.data && json.data.id) {",
                            "  pm.environment.set('socialMediaId', json.data.id);",
                            "}"
                        ]
                    }
                }
            ],
            "response": []
        },
        {
            "name": "Create Duplicate (should 409)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Cookie",
                        "value": "access_token={{token}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"name\": \"INSTAGRAM\",\n  \"link\": \"https://instagram.com/another\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/social-medias",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "social-medias"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test('Status is 409 for duplicate', function () {",
                            "  pm.response.to.have.status(409);",
                            "});"
                        ]
                    }
                }
            ],
            "response": []
        },
        {
            "name": "Get All Social Medias",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Cookie",
                        "value": "access_token={{token}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/social-medias?page=1&limit=10",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "social-medias"
                    ],
                    "query": [
                        {
                            "key": "page",
                            "value": "1"
                        },
                        {
                            "key": "limit",
                            "value": "10"
                        }
                    ]
                },
                "description": "Get all social medias with pagination"
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
                            "const res = pm.response.json();",
                            "pm.test('Response has data array', function () { pm.expect(res).to.have.property('data'); pm.expect(Array.isArray(res.data)).to.be.true; });"
                        ]
                    }
                }
            ],
            "response": []
        },
        {
            "name": "Get Social Media by ID",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Cookie",
                        "value": "access_token={{token}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/social-medias/{{socialMediaId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "social-medias",
                        "{{socialMediaId}}"
                    ]
                },
                "description": "Get a single social media by ID (uses stored socialMediaId)"
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
                            "const json = pm.response.json();",
                            "pm.test('Returned ID matches requested', function () { pm.expect(json).to.have.property('id'); pm.expect(String(json.id)).to.eql(pm.environment.get('socialMediaId')); });"
                        ]
                    }
                }
            ],
            "response": []
        },
        {
            "name": "Update Social Media (link only)",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Cookie",
                        "value": "access_token={{token}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"link\": \"https://instagram.com/stankom_updated\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/social-medias/{{socialMediaId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "social-medias",
                        "{{socialMediaId}}"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
                            "const json = pm.response.json();",
                            "pm.test('Link updated', function () { pm.expect(json.data).to.have.property('link'); pm.expect(json.data.link).to.include('updated'); });"
                        ]
                    }
                }
            ],
            "response": []
        },
        {
            "name": "Update Social Media (change type to FACEBOOK - expect 409 if exists)",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Cookie",
                        "value": "access_token={{token}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"name\": \"FACEBOOK\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/social-medias/{{socialMediaId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "social-medias",
                        "{{socialMediaId}}"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "// This request may return 200 (if FACEBOOK not present) or 409 (if duplicate). We assert either",
                            "pm.test('Status is 200 or 409', function () { pm.expect([200,409]).to.include(pm.response.code); });"
                        ]
                    }
                }
            ],
            "response": []
        },
        {
            "name": "Delete Social Media",
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Cookie",
                        "value": "access_token={{token}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/social-medias/{{socialMediaId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "social-medias",
                        "{{socialMediaId}}"
                    ]
                },
                "description": "Delete a social media by ID"
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
                            "// clear stored id",
                            "pm.environment.unset('socialMediaId');"
                        ]
                    }
                }
            ],
            "response": []
        }
    ]
}